

html, body
  height: 100%
  width: 100%
  margin: 0
  padding: 0

div#viewporter
  width: 100%
  height: 100%
  display: -webkit-box;
  -webkit-box-orient: vertical;
  overflow: hidden
  
div#head
  
  background-color: #333
  height: 50px;
  display: -webkit-box;
  -webkit-box-orient: horizontal;
  h1
    -webkit-box-flex: 1
    padding: 0
    margin: 0
    text-align: center
    color: white

div#content
  background-color: #ccc
  -webkit-box-flex: 1;
  -webkit-overflow-scrolling:touch;
  overflow:auto;

.center
  display: block;
  text-align: center;

div.order
  input[type="checkbox"]
    margin:0 auto
    display: block;

.topping_icon
  width: 30px;
  height: 30px;
  margin: 0 auto;
  display: block;
  opacity: 0.5;

.selected
  opacity:1;

